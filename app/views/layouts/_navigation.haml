              %a.dropdown-toggle{:href => "#"}
                %i.fa.fa-bell-o
              %ul.dropdown-menu.dropdown-menu-right
                %li.dropdown-header
                  Notifications
                %li.divider
                %li
                  %a{:href => "#"} Server Down!
          .meta
            .page
              {{'WELCOME_INDEX_TITLE' | translate}}
